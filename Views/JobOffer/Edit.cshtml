@model CVEditor.Models.JobOffer

@{
    ViewData["Title"] = "Edit";
}
<button style="display:none" hidden="hidden" id="btn" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>
<button style="display:none" hidden="hidden" id="btn2" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal2">Open Modal</button>
<button style="display:none" hidden="hidden" id="btn3" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal3">Open Modal</button>
<button style="display:none" hidden="hidden" id="btn4" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal4">Open Modal</button>
<button style="display:none" hidden="hidden" id="btn5" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal5">Open Modal</button>
